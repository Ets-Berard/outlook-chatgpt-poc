<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="MailApp">
  <Id>12345678-1234-1234-1234-1234567890ab</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Ets Bérard</ProviderName>
  <DefaultLocale>fr-FR</DefaultLocale>
  <DisplayName>Outlook ChatGPT Résumeur</DisplayName>
  <Description>Complément Outlook pour résumer les emails avec ChatGPT</Description>

  <!-- Icônes -->
  <IconUrl>https://Ets-Berard.github.io/outlook-chatgpt-poc/assets/icon-32.png</IconUrl>
  <HighResolutionIconUrl>https://Ets-Berard.github.io/outlook-chatgpt-poc/assets/icon-80.png</HighResolutionIconUrl>

  <!-- URL de support -->
  <SupportUrl>https://Ets-Berard.github.io/outlook-chatgpt-poc</SupportUrl>

  <!-- Cible : Outlook -->
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <!-- Permissions -->
  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>
  <Permissions>ReadWriteItem</Permissions>

  <!-- Panneau latéral (Task Pane) -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://Ets-Berard.github.io/outlook-chatgpt-poc/taskpane.html"/>
      </DesktopSettings>
    </Form>
  </FormSettings>
</OfficeApp>
